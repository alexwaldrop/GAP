[general]
# Properties of instances to be created
verbosity                   = integer(0, 3, default=3)
split                       = boolean(default=False)
nr_splits                   = integer(1, 100, default=20)


[platform]
zone                        = string(default="us-east1-b")
service_account_key_file    = string(default="keys/Davelab_GAP_key.json")

MS_nr_cpus                  = integer(1, 32, default=8)
MS_mem                      = integer(default=30)
MS_local_ssds               = integer(default=5)

max_nr_cpus                 = integer(default=32)
max_mem                     = integer(default=208)
max_reset                   = integer(default=5)

start_up_script             = string(default=None)
shutdown_script             = string(default=None)

disk_image                  = string(default="davelab-image")
boot_disk_size              = integer(1,500, default=60)
is_boot_disk_ssd            = boolean(default=False)

is_split_preemptible        = boolean(default=True)
split_disk_image            = string(default="davelab-image")
split_boot_disk_size        = integer(1,500, default=60)



[paths]
wrk_dir             = string(default="/data/")
log_dir             = string(default="/data/logs/")
tmp_dir             = string(default="/data/tmp/")
resource_dir        = string(default="/data/resources/")
bin_dir             = string(default="/data/bin")

[[output_dir]]
    path            = string
    is_remote_path  = boolean(default=False)
    is_dir          = boolean(default=True)

[[resources]]
    [[__many__]]
        file_type       = string
        path            = string
        is_dir          = boolean(default=False)
        is_basename     = boolean(default=False)
        is_remote_path  = boolean(default=False)
        containing_dir  = string(default=None)

[tools]

[[__many__]]
module          = string
input_from      = force_list(default=list("main_input"))
final_output    = force_list(default=list())
